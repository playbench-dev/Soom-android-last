<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Reports.Activitys.StaticAsthmaResultActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="360">

        <TextView
            android:id="@+id/txt_statics_asthma_detail_back"
            android:layout_width="0dp"
            android:layout_weight="40"
            android:paddingLeft="12dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/back_btn_image"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="left|center_vertical"
            android:textColor="#343434"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/txt_statics_asthma_result_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="280"
            android:textSize="20dp"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:textColor="#343434"
            android:text=""
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ededed"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="26dp"
            android:paddingRight="26dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"/>

            <TextView
                android:id="@+id/txt_check_result_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:textColor="@color/color343434"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/img_check_result_icon"
                android:layout_width="match_parent"
                android:layout_height="90dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <RelativeLayout
                android:layout_width="96dp"
                android:layout_height="68dp"
                android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/lin_check_result_score"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"/>

                <TextView
                    android:id="@+id/txt_check_result_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/color343434"
                    android:gravity="center"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:textSize="44dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"/>

            <TextView
                android:id="@+id/txt_check_result_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color343434"
                android:textSize="18dp"
                android:paddingLeft="21dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <TextView
                android:id="@+id/txt_check_result_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingLeft="21dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textColor="@color/color343434"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/e7e7e7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <Button
            android:id="@+id/btn_check_result_finish"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="150"
            android:text="검사항목 다시보기"
            android:textColor="@color/white"
            android:background="@drawable/radius_4dp"
            android:backgroundTint="@color/color09D182"
            android:textSize="18dp"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

</LinearLayout>