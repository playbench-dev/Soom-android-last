<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="360">

        <TextView
            android:id="@+id/txt_total_static_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:drawableLeft="@drawable/back_btn_image"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="left|center_vertical"
            android:textColor="#343434"
            android:textSize="16dp"
            android:paddingLeft="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="280"
            android:gravity="center">
            <TextView
                android:id="@+id/txt_statics_asthma_result_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:textColor="#343434"
                android:text="종합보고서"
                android:gravity="center"/>

            <ImageView
                android:layout_width="34dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_ex"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_total_statics_shared"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="24"
            android:src="@drawable/ic_shared"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:gravity="center"
        android:text="아래 예시보고서는 증상 기록 시\n나만의 보고서로 변경됩니다."
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:textColor="@color/color343434"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dbdbdb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32.2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/webView_total_statics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <Button
                android:id="@+id/btn_ex_total_static_move"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/shape_shadow_primary_bg"
                android:text="내 보고서 만들러 가기 📄"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:elevation="10dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"/></LinearLayout>
    </RelativeLayout>

</LinearLayout>