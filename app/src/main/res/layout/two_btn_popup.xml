<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="320"
    android:background="@drawable/radius_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_two_btn_popup_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="#343434"
            android:textSize="16dp"></TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d5d5"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="189"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_two_btn_popup_contents"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center"
            android:text=""
            android:textColor="#343434"
            android:textSize="16dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="66"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_two_btn_popup_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radius_right_bottom_5dp"
            android:backgroundTint="@color/ededed"
            android:text=""
            android:textColor="@color/black"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textSize="16dp"></Button>

        <Button
            android:id="@+id/btn_two_btn_popup_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radius_left_bottom_5dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="16dp"></Button>
    </LinearLayout>
</LinearLayout>