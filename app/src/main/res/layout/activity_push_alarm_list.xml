<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Common.Activity.PushAlarmListActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="360">

        <TextView
            android:id="@+id/txt_check_first_back"
            android:layout_width="0dp"
            android:layout_weight="40"
            android:paddingLeft="12dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/back_btn_image"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="left|center_vertical"
            android:textColor="#343434"
            android:textSize="16dp"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="280"
            android:gravity="center"
            android:text="알림"
            android:textColor="@color/color343434"
            android:textSize="18dp"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"/>


    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/push_list_view"
        android:divider="@null"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txt_not_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:text="알림이 없습니다."
        android:gravity="center"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:visibility="gone"
        android:includeFontPadding="false"></TextView>
</LinearLayout>