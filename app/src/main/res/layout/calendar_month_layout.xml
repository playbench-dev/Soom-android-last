<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/robotoCalendarDateTitleContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:clickable="true">
    <LinearLayout
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/calendar_padding">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_black_arrow_right"
            android:tint="@color/black"
            android:scaleType="fitCenter"/>
    </LinearLayout>


    <TextView
        android:id="@+id/monthText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:tag="dateTitle"
        android:gravity="center"
        android:text="MONTH YEAR"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true" />

    <LinearLayout
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/calendar_padding">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_black_arrow_right"
            android:rotation="180"
            android:tint="@color/black"
            android:scaleType="fitCenter"/>

    </LinearLayout>
</RelativeLayout>