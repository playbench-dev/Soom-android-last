<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_new_community_search_tag"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/txt_new_community_search_tag_list_item_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="12.5dp"
            android:textColor="#505050"
            android:textSize="14dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/img_new_community_search_tag_list_item_remove"
            android:layout_width="9dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_new_community_search_tag_remove"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"
        android:layout_marginLeft="15.5dp"
        android:layout_marginRight="15.5dp"></LinearLayout>
</LinearLayout>