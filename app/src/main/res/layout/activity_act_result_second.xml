<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Reports.Activitys.ActResult.StaticActResultSecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="360">

        <TextView
            android:id="@+id/txt_check_second_back"
            android:layout_width="0dp"
            android:layout_weight="40"
            android:paddingLeft="12dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/back_btn_image"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="left|center_vertical"
            android:textColor="#343434"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/txt_check_second_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="280"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:textColor="#343434"
            android:textSize="16dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="23dp"
            android:paddingRight="21dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16dp"
                android:text="2/5"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:textColor="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:background="@drawable/act_parent_bar_bg"
                android:weightSum="5">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/act_parent_bar_bg"
                    android:backgroundTint="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="29dp"
            android:paddingBottom="28dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:background="@color/fafafa">

            <TextView
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:id="@+id/txt_act_result_second_question"
                android:text="@string/adult_check_first_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <RadioGroup
            android:id="@+id/rdo_check_second_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <RadioButton
                android:id="@+id/rdo_check_second1"
                android:layout_width="match_parent"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:button="@null"
                android:background="@drawable/act_radio_bg"
                android:drawableLeft="@drawable/custom_check_box_1"
                android:layout_height="48dp"
                android:text="   항상 그랬어요"
                android:textColor="#acacac"
                android:textSize="16dp"
                android:checked="false"
                android:paddingLeft="20dp"/>

            <RadioButton
                android:id="@+id/rdo_check_second2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="   대부분의 시간동안"
                android:button="@null"
                android:background="@drawable/act_radio_bg"
                android:drawableLeft="@drawable/custom_check_box_1"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:textColor="#acacac"
                android:textSize="16dp"
                android:paddingLeft="20dp"/>

            <RadioButton
                android:id="@+id/rdo_check_second3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="   다소의 시간 동안"
                android:textColor="#acacac"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:button="@null"
                android:background="@drawable/act_radio_bg"
                android:drawableLeft="@drawable/custom_check_box_1"
                android:textSize="16dp"
                android:paddingLeft="20dp"/>

            <RadioButton
                android:id="@+id/rdo_check_second4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="   아주 약간의 시간동안"
                android:button="@null"
                android:background="@drawable/act_radio_bg"
                android:drawableLeft="@drawable/custom_check_box_1"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:textColor="#acacac"
                android:textSize="16dp"
                android:paddingLeft="20dp"/>

            <RadioButton
                android:id="@+id/rdo_check_second5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="   전혀 그렇지 않았어요"
                android:textColor="#acacac"
                android:button="@null"
                android:background="@drawable/act_radio_bg"
                android:drawableLeft="@drawable/custom_check_box_1"
                android:textSize="16dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:paddingLeft="20dp"/>
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_check_second_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/radius_4dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="다음"
            android:textColor="@color/white"
            android:textSize="18dp"></Button>

    </LinearLayout>

</LinearLayout>