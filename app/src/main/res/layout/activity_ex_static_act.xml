<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ex.Static.exStaticActActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="360">

            <TextView
                android:id="@+id/txt_statics_asthma_detail_back"
                android:layout_width="0dp"
                android:layout_weight="40"
                android:paddingLeft="12dp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/back_btn_image"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:gravity="left|center_vertical"
                android:textColor="#343434"
                android:textSize="18sp"></TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="280"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_statics_asthma_result_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:textColor="#343434"
                    android:text="천식조절검사 보고서"
                    android:gravity="center"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ic_ex"
                    android:layout_marginLeft="6dp"/>
            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:text="아래 예시보고서는 천식조절검사 기록 시\n나만의 보고서로 변경됩니다."
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/color343434"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18.2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dbdbdb"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50.2dp"/>

                <TextView
                    android:id="@+id/txt_check_result_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/color343434"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <ImageView
                    android:id="@+id/img_check_result_icon"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

                <RelativeLayout
                    android:layout_width="96dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/lin_check_result_score"
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:layout_alignParentBottom="true"/>

                    <TextView
                        android:id="@+id/txt_check_result_score"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/color343434"
                        android:gravity="center"
                        android:fontFamily="@font/notosanscjkkr_bold"
                        android:includeFontPadding="false"
                        android:textSize="44dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"/>

                <TextView
                    android:id="@+id/txt_check_result_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color343434"
                    android:textSize="16dp"
                    android:paddingLeft="44dp"
                    android:text="숨케어님!"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="12dp"/>

                <TextView
                    android:id="@+id/txt_check_result_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:paddingLeft="44dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/color343434"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">
    <Button
        android:id="@+id/btn_ex_act_static_move"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/shape_shadow_primary_bg"
        android:text="내 보고서 만들러 가기 📄"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:elevation="10dp"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:includeFontPadding="false"/></LinearLayout>
</RelativeLayout>