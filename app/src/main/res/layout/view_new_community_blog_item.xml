<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <com.kmw.soom2.Views.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_new_community_blog_show_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/symptom_cause_gradient"
            android:backgroundTint="@color/colore6e6e6"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:gravity="center">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="9dp"
                android:src="@drawable/ic_blog_list_item_eye" />

            <TextView
                android:id="@+id/txt_blog_list_item_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/notosanscjkkr_medium_regular"
                android:includeFontPadding="false"/>
        </LinearLayout>

    </com.kmw.soom2.Views.SquareRelativeLayout>

    <TextView
        android:id="@+id/txt_new_community_blog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="16dp"
        android:textColor="@color/color343434"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/txt_new_community_blog_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contents"
        android:textSize="14dp"
        android:textColor="@color/color343434"
        android:fontFamily="@font/notosanscjkkr_medium_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="1dp"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>