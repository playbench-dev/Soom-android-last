<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="50"
        android:orientation="horizontal"
        android:weightSum="360">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16"></LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30">

            <ImageView
                android:id="@+id/user_icon_activity_posts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_icon"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:text="강남지현우"
                android:textColor="#CC000000"
                android:textSize="13sp"></TextView>

            <TextView
                android:id="@+id/date_text_view_activity_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:text="2019-11-16 19:30"
                android:textColor="#CC000000"
                android:textSize="10sp"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="106"
            android:gravity="right|center_vertical"
            android:paddingRight="24dp">

            <ImageView
                android:id="@+id/expandable_image_view_activity_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/expandable_icon"></ImageView>

        </LinearLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width = "match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_pager_container_activity_posts"
        >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintDimensionRatio="1:1"
        tools:ignore="MissingConstraints">

        <androidx.viewpager.widget.ViewPager
            android:overScrollMode="never"
            android:id="@+id/view_pager_write_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>

        <com.google.android.material.tabs.TabLayout
            android:focusable="false"
            android:id="@+id/tab_layout_write_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"></com.google.android.material.tabs.TabLayout>
    </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:paddingLeft="16dp"
        android:paddingTop="15dp"
        android:text="test"
        android:textColor="#CC000000"
        android:textSize="13sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:paddingLeft="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="#test"
            android:textColor="#09D192"
            android:textSize="12sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="#test"
            android:textColor="#09D192"
            android:textSize="12sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="응원해요 "
            android:textColor="#CC000000"
            android:textSize="13sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="10"
            android:textColor="#CC000000"
            android:textSize="13sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="개"
            android:textColor="#CC000000"
            android:textSize="13sp"></TextView>

        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_brightness_1_black_24dp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="댓글 "
            android:textColor="#CC000000"
            android:textSize="13sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="2"
            android:textColor="#CC000000"
            android:textSize="13sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="개"
            android:textColor="#CC000000"
            android:textSize="13sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical">

            <TextView
                android:id="@id/date_text_view_activity_posts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="2019-11-16 19:30"
                android:textColor="#CC000000"
                android:textSize="12sp"></TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="44"
        android:orientation="horizontal"
        android:weightSum="360">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="44"
            android:gravity="center">

            <ImageView
                android:id="@+id/like_image_view_activity_posts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10.3dp"
                android:layout_marginBottom="11dp"
                android:src="@drawable/ic_favorite_border_black_24dp"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="44"
            android:gravity="center">

            <ImageView
                android:id="@+id/comment_image_view_activity_posts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/comment_icon"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="44"
            android:gravity="center">

            <ImageView
                android:id="@+id/book_mark_image_view_activity_posts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/book_mark_icon"></ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>