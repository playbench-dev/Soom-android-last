<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/radius_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_calendar_picker_title"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:includeFontPadding="false"
        android:textSize="18dp"
        android:text="시간 선택"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/d5d5d5"/>

    <com.kmw.soom2.Common.DateTimePicker.SingleDateAndTimePicker
        android:id="@+id/single_day_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:picker_curved="true"
        app:picker_cyclic="true"
        app:picker_mustBeOnFuture="true"
        app:picker_visibleItemCount="7" />

</LinearLayout>