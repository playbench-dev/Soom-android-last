<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="616"
    tools:context="com.kmw.soom2.DrugControl.DrugFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:gravity="center_vertical"
            android:text="커뮤니티"
            android:textColor="#000000"
            android:textSize="22dp"></TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <LinearLayout
                android:id="@+id/lin_community_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_community_search"
                    android:tint="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="검색"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:textSize="13dp"
                    android:layout_marginLeft="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="12.2dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/lin_community_write"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_community_write"
                    android:tint="@color/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="쓰기"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:textSize="13dp"
                    android:layout_marginLeft="6dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="24dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img_community_alarm"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_alarm_off"
                android:visibility="gone"
                android:layout_marginRight="24dp"/>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_community_main_category"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabIndicatorColor="@color/color09D182"
        app:tabIndicatorHeight="3dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/color09D182"
        app:tabTextAppearance="@style/tab_text"
        app:tabTextColor="#7e7e7e"></com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/fragment_new_community_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
