<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="14dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical">
            
            <ImageView
                android:id="@+id/img_review_list_item_profile"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2.4dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_review_list_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color343434"
                        android:fontFamily="@font/notosanscjkkr_bold"
                        android:includeFontPadding="false"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/txt_review_list_item_birth_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color343434"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:textSize="12dp"
                        android:layout_marginLeft="3dp"/>

                    <TextView
                        android:id="@+id/txt_review_list_item_label"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:gravity="center"
                        android:text=""
                        android:textSize="9dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="3.3dp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/custom_primary_50dp"/>

                    <ImageView
                        android:id="@+id/img_review_list_item_mine"
                        android:layout_width="32.3dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_my_review">

                    </ImageView>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_review_list_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="10dp"
                    android:fontFamily="@font/notosanscjkkr_medium_regular"
                    android:textColor="@color/colorb1b1b1"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_review_list_item_shared"
                android:layout_width="100dp"
                android:layout_height="23dp"
                android:src="@drawable/direction_icon"
                android:scaleType="fitStart"/>

            <ImageView
                android:id="@+id/img_review_list_item_more"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_more"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_review_list_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:background="@drawable/radius_9dp"
        android:backgroundTint="@color/f7f7f7"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용기간 "
                android:textColor="#434343"
                android:textSize="14dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/txt_review_list_item_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#434343"
                android:textSize="14dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부작용 "
                android:textColor="#434343"
                android:textSize="14dp"
                android:layout_marginLeft="13dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/txt_review_list_item_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#434343"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="#e0e0e0"/>

        <com.kmw.soom2.Views.LineTextView
            android:id="@+id/txt_review_list_item_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color343434"
            android:textSize="14dp"
            android:maxLines="3"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/notosanscjkkr_medium_regular"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/txt_review_list_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color343434"
            android:text="···더보기"
            android:gravity="right"
            android:textSize="14dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:paddingLeft="16dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_review_list_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#a3a3a3"
            android:text="@string/review_edit"
            android:fontFamily="@font/notosanscjkkr_medium_regular"
            android:includeFontPadding="false"
            android:textSize="14dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"/>

    <LinearLayout
        android:id="@+id/lin_review_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
</LinearLayout>