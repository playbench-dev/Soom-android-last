<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

        <CheckBox
            android:id="@+id/chb_statics_medicine_list_item"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/custom_check_box"
            android:button="@null"
            android:enabled="false"/>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_statics_medicine_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text=""
                android:fontFamily="@font/notosanscjkkr_bold"
                android:textColor="@color/acacac"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_statics_medicine_list_item_basic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:textSize="14dp"
                    android:textColor="@color/acacac"/>

                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_statics_medicine_list_item_emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:textSize="14dp"
                    android:textColor="@color/acacac"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>