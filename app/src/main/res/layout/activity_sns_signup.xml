<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="672"
    tools:context=".Login.Activitys.SnsSignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="360">

        <ImageView
            android:id="@+id/img_sns_signup_back"
            android:layout_width="43dp"
            android:paddingLeft="19dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="360"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginRight="13dp"
            android:src="@drawable/ic_new_welcome_logo"></ImageView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="37dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:text="SNS 회원가입"
                android:textColor="#343434"
                android:textSize="26dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="37dp"
                android:layout_marginLeft="37dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:text="이메일"
                    android:textColor="#363636"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/email_warning_activity_sns_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:gravity="right|center"
                    android:imeOptions="actionNext"
                    android:includeFontPadding="false"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:visibility="invisible"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"></LinearLayout>

            <LinearLayout
                android:id="@+id/lin_sns_sign_up_id_bg"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:weightSum="360"
                android:layout_marginRight="37dp"
                android:layout_marginLeft="37dp"
                android:background="@drawable/shape_stroke_edit_bg">

                <EditText
                    android:id="@+id/email_edit_activity_sns_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:hint="soomcare@soom.com"
                    android:includeFontPadding="false"
                    android:nextFocusDown="@+id/nickname_edit_activity_sns_signup"
                    android:singleLine="true"
                    android:textColor="#343434"
                    android:textColorHint="#acacac"
                    android:textSize="14dp"
                    android:background="@null"
                    android:theme="@style/EditTheme"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="13dp"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="37dp"
                android:layout_marginLeft="37dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:text="닉네임"
                    android:textColor="#363636"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/nickname_warning_activity_sns_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:gravity="right|center"
                    android:includeFontPadding="false"
                    android:textSize="12dp"
                    android:visibility="invisible"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"></LinearLayout>

            <RelativeLayout
                android:id="@+id/rela_sns_sign_up_id_bg"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal"
                android:weightSum="360"
                android:layout_marginRight="37dp"
                android:layout_marginLeft="37dp"
                android:background="@drawable/shape_stroke_edit_bg">

                <com.kmw.soom2.Common.BackPressEditText
                    android:id="@+id/nickname_edit_activity_sns_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:hint="한글,영어,숫자만 사용가능"
                    android:imeOptions="actionDone"
                    android:includeFontPadding="false"
                    android:inputType="textNoSuggestions"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:textColor="#343434"
                    android:textColorHint="#acacac"
                    android:textSize="14dp"
                    android:background="@null"
                    android:theme="@style/EditTheme"></com.kmw.soom2.Common.BackPressEditText>

                <TextView
                    android:id="@+id/edit_text_count_text_view_activity_sns_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/edit_text_count_max_text_view_activity_sns_signup"
                    android:fontFamily="@font/notosanscjkkr_medium_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="#343434"
                    android:textSize="14dp"></TextView>
                <TextView
                    android:id="@+id/edit_text_count_max_text_view_activity_sns_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/nickname_edit_activity_sns_signup"
                    android:fontFamily="@font/notosanscjkkr_medium_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="/8"
                    android:textColor="#343434"
                    android:textSize="14dp"></TextView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="17.2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="37dp"
                android:layout_marginLeft="37dp"
                android:background="#dedede"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="14.2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="37dp"
                android:layout_marginLeft="37dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txt_sns_sign_up_staff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="의료진이신가요?"
                    android:textColor="#909090"
                    android:textSize="13dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false" />

                <CheckBox
                    android:id="@+id/chb_sns_sign_up_staff"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginLeft="23dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp">

                <Button
                    android:id="@+id/success_btn_activity_sns_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_btn_primary_bg"
                    android:backgroundTint="#dbdbdb"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:text="다음 1/3"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    style="?android:attr/borderlessButtonStyle"></Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>