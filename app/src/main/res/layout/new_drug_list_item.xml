<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/radius_12"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/lin_new_drug_list_item_move"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:paddingLeft="19dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_new_drug_list_item_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_medicine"
                android:scaleType="fitXY"
                android:background="@drawable/medicine_bg"/>

            <LinearLayout
                android:layout_width="13dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_new_drug_list_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""/>

                <TextView
                    android:id="@+id/txt_new_drug_list_item_cnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:fontFamily="@font/notosanscjkkr_medium_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_new_drug_list_item_review"
            android:layout_width="78dp"
            android:layout_height="match_parent">
            
            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_stroke_edit_bg"
                android:backgroundTint="@color/colorPrimary">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="약 후기"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
</LinearLayout>