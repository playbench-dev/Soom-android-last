<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="616"
    tools:context="com.kmw.soom2.DrugControl.DrugFragment">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="50">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_marginLeft="24dp"
           android:fontFamily="@font/notosanscjkkr_bold"
           android:includeFontPadding="false"
           android:gravity="center_vertical"
           android:text="커뮤니티"
           android:textColor="#000000"
           android:textSize="22dp"></TextView>

       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="right">

            <ImageView
                android:id="@+id/img_community_write"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_community_write"/>

           <LinearLayout
               android:layout_width="16dp"
               android:layout_height="match_parent"/>

           <ImageView
               android:id="@+id/img_community_search"
               android:layout_width="24dp"
               android:layout_height="match_parent"
               android:src="@drawable/ic_community_search"/>

           <LinearLayout
               android:layout_width="16dp"
               android:layout_height="match_parent"/>

           <ImageView
               android:id="@+id/img_community_alarm"
               android:layout_width="24dp"
               android:layout_height="match_parent"
               android:src="@drawable/ic_alarm_off"/>

           <LinearLayout
               android:layout_width="20dp"
               android:layout_height="match_parent"/>
       </LinearLayout>
   </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_community"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        app:tabIndicatorColor="#09D182"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#000000"
        app:tabTextAppearance="@style/tab_text"
        app:tabTextColor="#5c5c5c"></com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/view_pager_community"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="516">
    </FrameLayout>
</LinearLayout>
