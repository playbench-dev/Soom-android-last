<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius_dialog"
    android:orientation="vertical"
    android:weightSum="320">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="탈퇴하기"
            android:textColor="#343434"
            android:textSize="18sp"></TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#d5d5d5"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="188"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center"
            android:text="탈퇴하시겠습니까?"
            android:textColor="#343434"
            android:textSize="18sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="66"
        android:orientation="horizontal"
        android:weightSum="320">

        <Button
            android:id="@+id/cancel_button_secession_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="160"
            android:background="@drawable/dialog_cancel_button"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="취소"
            android:textColor="#000000"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/secession_button_secession_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="160"
            android:background="@drawable/dialog_logout_button"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="탈퇴하기"
            android:textColor="#ffffff"
            android:textSize="18sp"></Button>
    </LinearLayout>
</LinearLayout>