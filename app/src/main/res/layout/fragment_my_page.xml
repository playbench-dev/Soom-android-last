<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="616"
    tools:context="com.kmw.soom2.MyPage.MyPageFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="360">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:text="내 정보"
            android:textColor="#000000"
            android:textSize="22dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <ImageView
                android:id="@+id/alarm_fragment_my_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="24dp"
                android:src="@drawable/ic_alarm_off"></ImageView>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/user_icon_image_view_fragment_my_page"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/user_icon"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/user_name_fragment_my_page"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="@font/notosanscjkkr_bold"
                            android:includeFontPadding="false"
                            android:text=""
                            android:textColor="#cc000000"
                            android:textSize="16dp"></TextView>

                        <TextView
                            android:id="@+id/txt_fragment_my_page_label"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:gravity="center"
                            android:text=""
                            android:textSize="9dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:fontFamily="@font/notosanscjkkr_medium_regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/custom_primary_50dp"/>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/user_category_fragment_my_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:text="본인"
                        android:textColor="#cc000000"
                        android:textSize="14dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical">

                    <ImageView
                        android:id="@+id/setting_image_view_fragment_my_page"
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="23dp"
                        android:src="@drawable/ic_my_page_setting"></ImageView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#e4e4e4"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="360">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/post_icon"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:gravity="center"
                    android:text="게시글"
                    android:textColor="#343434"
                    android:textSize="14dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="320">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="107"
                    android:gravity="center"
                    android:background="@drawable/time_choice_button_radius"
                    android:backgroundTint="@color/f5f5f5"
                    android:id="@+id/write_linear_layout_fragment_my_page"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_write_my_page"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:text="내가 쓴 글"
                        android:textColor="#000000"
                        android:textSize="12dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="106"
                    android:gravity="center"
                    android:background="@drawable/time_choice_button_radius"
                    android:backgroundTint="@color/f5f5f5"
                    android:id="@+id/comment_linear_layout_fragment_my_page"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_comment_my_page"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:text="댓글 단 글"
                        android:textColor="#000000"
                        android:textSize="12dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="107"
                    android:gravity="center"
                    android:background="@drawable/time_choice_button_radius"
                    android:backgroundTint="@color/f5f5f5"
                    android:id="@+id/scrap_linear_layout_fragment_my_page"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_scrap_my_page"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:text="저장한 글"
                        android:textColor="#000000"
                        android:textSize="12dp"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="#e4e4e4"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:orientation="vertical"
                android:weightSum="195">

                <LinearLayout
                    android:id="@+id/user_info_linear_layout_fragment_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="51"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/user_info_icon"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="18dp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="기본정보"
                        android:textColor="#343434"
                        android:textSize="14dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/ic_my_page_right_arrow"></ImageView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hos_info_linear_layout_fragment_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="51"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/hos_info_icon"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="18dp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="다니는 병원"
                        android:textColor="#343434"
                        android:textSize="14dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/ic_my_page_right_arrow"></ImageView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alarm_setting_linear_layout_fragment_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="51"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/alarm_setting_icon"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="18dp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="설정"
                        android:textColor="#343434"
                        android:textSize="14dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/ic_my_page_right_arrow"></ImageView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/inquiry_linear_layout_fragment_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="51"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/question_icon"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="18dp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="문의 및 신고"
                        android:textColor="#343434"
                        android:textSize="14dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/ic_my_page_right_arrow"></ImageView>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/report_send_linear_layout_fragment_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="51"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/report_send_icon"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="18dp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="기록 보내기"
                        android:textColor="#343434"
                        android:textSize="14dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/right_icon"></ImageView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="#e4e4e4"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:orientation="vertical"
                android:layout_weight="195">
                <LinearLayout
                    android:id="@+id/notice_linear_layout_fragment_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="51"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="공지사항"
                        android:textColor="#343434"
                        android:textSize="14dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_my_page_right_arrow"></ImageView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/terms_linear_layout_fragment_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="51"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="약관안내"
                        android:textColor="#343434"
                        android:textSize="14dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_my_page_right_arrow"></ImageView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_ver_linear_layout_fragment_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="51"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="앱 버전"
                        android:textColor="#343434"
                        android:textSize="14dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center">
                        <ImageView
                            android:id="@+id/img_my_page_update"
                            android:layout_width="82.2dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_update_on"
                            android:scaleType="fitEnd"
                            android:layout_marginRight="16.8dp"/>
                        <TextView
                            android:id="@+id/txt_app_ver"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14dp"
                            android:textColor="#343434"
                            android:text=""
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:layout_marginRight="4dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"></TextView>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/air_pollution_linear_layout_info_fragment_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="51"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="대기오염 정보 안내"
                        android:textColor="#343434"
                        android:textSize="14dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_my_page_right_arrow"></ImageView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
