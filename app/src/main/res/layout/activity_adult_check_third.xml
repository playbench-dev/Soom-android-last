<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Home.Activitys.AdultActivitys.AdultCheckThirdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="360">

        <TextView
            android:id="@+id/txt_adult_check_third_back"
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/back_btn_image"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="left|center_vertical"
            android:textColor="#343434"
            android:textSize="18sp"
            android:paddingLeft="12dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="23dp"
            android:paddingRight="21dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16dp"
                android:text="3/5"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:textColor="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:background="@drawable/act_parent_bar_bg"
                android:weightSum="5">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/act_parent_bar_bg"
                    android:backgroundTint="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="29dp"
            android:paddingBottom="28dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:background="@color/fafafa">

            <TextView
                android:id="@+id/txt_scroll"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:text="@string/adult_check_third_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <RadioGroup
            android:id="@+id/rdo_adult_check_third_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">

            <RadioButton
                android:id="@+id/rdo_1"
                android:layout_width="match_parent"
                android:button="@null"
                android:background="@drawable/act_radio_bg"
                android:drawableLeft="@drawable/custom_check_box_1"
                android:layout_height="48dp"
                android:text="   일주일에 4일 밤 이상을"
                android:textColor="@color/acacac"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:textSize="16dp"
                android:checked="false"
                android:paddingLeft="20dp"/>

            <RadioButton
                android:id="@+id/rdo_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="   일주일에 2~3일 밤을"
                android:button="@null"
                android:background="@drawable/act_radio_bg"
                android:drawableLeft="@drawable/custom_check_box_1"
                android:textColor="@color/acacac"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:paddingLeft="20dp"/>

            <RadioButton
                android:id="@+id/rdo_3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="   일주일에 한번"
                android:textColor="@color/acacac"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:background="@drawable/act_radio_bg"
                android:drawableLeft="@drawable/custom_check_box_1"
                android:textSize="16dp"
                android:paddingLeft="20dp"/>

            <RadioButton
                android:id="@+id/rdo_4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="   한 두번 그랬어요"
                android:button="@null"
                android:background="@drawable/act_radio_bg"
                android:drawableLeft="@drawable/custom_check_box_1"
                android:textColor="@color/acacac"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:paddingLeft="20dp"/>

            <RadioButton
                android:id="@+id/rdo_5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="   전혀 그렇지 않았어요"
                android:textColor="@color/acacac"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:background="@drawable/act_radio_bg"
                android:drawableLeft="@drawable/custom_check_box_1"
                android:textSize="16dp"
                android:paddingLeft="20dp"/>
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_adult_check_third_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/radius_4dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="다음"
            android:textColor="@color/white"
            android:textSize="18dp"></Button>

    </LinearLayout>

</LinearLayout>