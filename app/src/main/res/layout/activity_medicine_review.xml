<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Home.Activitys.MedicineInsertActivity.MedicineReviewWriteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="360">

            <ImageView
                android:id="@+id/img_medicine_review_insert_back"
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="match_parent"
                android:src="@drawable/back_btn_image"
                android:paddingLeft="12dp"/>

            <TextView
                android:id="@+id/txt_review_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="280"
                android:gravity="center"
                android:text="약 후기쓰기"
                android:textSize="18dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_review_remove"
                    android:layout_marginLeft="16dp"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/trash"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ededed"/>

        <ScrollView
            android:id="@+id/scr_medicine_review"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="19dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="복용기간"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/color343434"
                    android:textSize="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="11dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/shape_stroke_edit_bg">

                    <TextView
                        android:id="@+id/txt_medicine_review_insert_term"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/acacac"
                        android:hint="기간선택"
                        android:textColor="@color/color343434"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/ic_review_arrow" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="부작용 여부"
                    android:textColor="@color/color343434"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:textSize="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="11dp"/>

                <RadioGroup
                    android:id="@+id/symptom_toggle_btn_activity_symptom_record"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:weightSum="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdo_medicine_review_insert_first"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_btn"
                        android:button="@null"
                        android:gravity="center"
                        android:text="있었어요"
                        android:textColor="#5c5c5c"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:textSize="14dp"></RadioButton>

                    <RadioButton
                        android:id="@+id/rdo_medicine_review_insert_second"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_btn"
                        android:button="@null"
                        android:gravity="center"
                        android:text="없었어요"
                        android:textColor="#5c5c5c"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:textSize="14dp"></RadioButton>

                    <RadioButton
                        android:id="@+id/rdo_medicine_review_insert_third"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_btn"
                        android:button="@null"
                        android:gravity="center"
                        android:text="모르겠어요"
                        android:textColor="#5c5c5c"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:textSize="14dp"></RadioButton>
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="19dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosanscjkkr_bold"
                        android:includeFontPadding="false"
                        android:textSize="16dp"
                        android:text="약 후기내용"/>

                    <TextView
                        android:id="@+id/txt_medicine_review_insert_contents_length"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color343434"
                        android:textSize="12dp"
                        android:text="(0/2000)"
                        android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="11dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="252dp"
                    android:background="@drawable/bolder_8dp"
                    android:padding="20dp">
                    <EditText
                        android:id="@+id/edt_medicine_review_insert_contents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/review_insert_hint"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:maxLength="2000"
                        android:background="@null"
                        android:textColorHint="@color/bababa"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_medicine_review_insert_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/success_button_radius"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:text="완료"
                android:textColor="#ffffff"
                android:backgroundTint="@color/dbdbdb"
                android:textSize="18sp"
                style="?android:attr/borderlessButtonStyle">

            </Button>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>