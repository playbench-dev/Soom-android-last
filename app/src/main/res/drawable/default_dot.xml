        <shape
            android:innerRadius="3dp"
            android:shape="ring"
            android:thickness="1dp"
            android:useLevel="false">
            <padding android:top="-1.5dp"
                android:left="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
